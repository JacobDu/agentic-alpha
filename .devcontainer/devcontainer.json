{
  "name": "agentic-alpha",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "workspaceFolder": "/workspaces/agentic-alpha",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/agentic-alpha,type=bind",
  "remoteUser": "root",
  "postCreateCommand": "uv sync",
  "forwardPorts": [5000],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  }
}
